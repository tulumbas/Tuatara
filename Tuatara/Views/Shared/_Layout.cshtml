<!DOCTYPE html>
<html ng-app="tuatara">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/angular")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tuatara", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Playbook", "playbook", "home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Projects", "workitems", "home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Resources", "AssignableResources", "home", new { area = "" }, null)</li>
                    @RenderSection("menu", false)
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    <script src="~/app/lib.js"></script>

    <script src="~/app/tuatara.js"></script>

    <script src="~/app/core/core-services.js"></script>

    <script src="~/app/playbook/playbook-service.js"></script>
    <script src="~/app/playbook/playbook.js"></script>
    <script src="~/app/playbook/row/playbook-row.js"></script>
    <script src="~/app/playbook/row/playbook-roweditor.js"></script>
    <script src="~/app/playbook/playbook-install.js"></script>

    <script src="~/app/editor-wi/editor-wi.js"></script>
    <script src="~/app/editor-wi/editor-wi-row.js"></script>
    <script src="~/app/editor-wi/editor-wi-install.js"></script>

    <script src="~/app/workresources/workresources.js"></script>
    <script src="~/app/workresources/workresources-row.js"></script>
    <script src="~/app/workresources/workresources-install.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
