<!DOCTYPE html>
<html ng-app="tuatara">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/angular")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tuatara", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li><a href="~/home/requests">Requests</a></li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/tuatara")*@

    <script src="~/Scripts/lib.js"></script>
    <script src="~/Scripts/factories/enums-factory.js"></script>
    <script src="~/Scripts/factories/playbook-service.js"></script>
    <script src="~/Scripts/controllers/playbook.js"></script>
    <script src="~/Scripts/controllers/playbook-row.js"></script>
    <script src="~/Scripts/controllers/requests/requests.js"></script>
    <script src="~/Scripts/Tuatara.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
